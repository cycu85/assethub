# In all environments, the following files are loaded if they exist,
# the latter taking precedence over the former:
#
#  * .env                contains default values for the environment variables needed by the app
#  * .env.local          uncommitted file with local overrides
#  * .env.$APP_ENV       committed environment-specific defaults
#  * .env.$APP_ENV.local uncommitted environment-specific overrides
#
# Real environment variables win over .env files.
#
# DO NOT DEFINE PRODUCTION SECRETS IN THIS FILE NOR IN ANY OTHER COMMITTED FILES.
# https://symfony.com/doc/current/configuration/secrets.html
#
# Run "composer dump-env prod" to compile .env files for production use (requires symfony/flex >=1.2).
# https://symfony.com/doc/current/deployment.html#environment-variables

###> symfony/framework-bundle ###
APP_ENV=prod
APP_DEBUG=false
# CHANGE THIS! Generate with: php bin/console secrets:generate-keys
APP_SECRET=CHANGE_ME_TO_RANDOM_SECRET_KEY
###< symfony/framework-bundle ###

###> doctrine/doctrine-bundle ###
# Format described at https://www.doctrine-project.org/projects/doctrine-dbal/en/latest/reference/configuration.html#connecting-using-a-url
# IMPORTANT: You MUST configure your server version, either here or in config/packages/doctrine.yaml
#
# CHANGE THESE VALUES FOR YOUR DATABASE:
DATABASE_URL="mysql://USERNAME:PASSWORD@localhost:3306/DATABASE_NAME?serverVersion=8.0&charset=utf8mb4"
# Alternative for SQLite (development):
# DATABASE_URL="sqlite:///%kernel.project_dir%/var/data.db"
###< doctrine/doctrine-bundle ###

###> symfony/mailer ###
# SMTP Configuration for sending emails
# For Gmail: MAILER_DSN=gmail+smtp://username:password@default
# For custom SMTP: MAILER_DSN=smtp://user:password@smtp.example.com:587
# For local testing (no emails sent): MAILER_DSN=null://null
MAILER_DSN=smtp://localhost
###< symfony/mailer ###

###> LDAP Integration ###
# LDAP/Active Directory integration settings
# These can be configured through web interface at /admin/settings/ldap
# or set here for initial configuration

# Enable LDAP integration (true/false)
LDAP_ENABLED=false

# LDAP Server configuration
LDAP_HOST=ldap://your-domain-controller.company.com
LDAP_PORT=389
LDAP_ENCRYPTION=starttls

# Service account for LDAP binding
LDAP_BIND_DN="CN=ldapservice,OU=Service Accounts,DC=company,DC=com"
LDAP_BIND_PASSWORD=your-service-account-password

# Search configuration
LDAP_BASE_DN="OU=Users,DC=company,DC=com"
LDAP_USER_FILTER="(&(objectClass=user)(!(userAccountControl:1.2.840.113556.1.4.803:=2)))"

# Field mapping (Active Directory defaults)
LDAP_MAP_USERNAME=sAMAccountName
LDAP_MAP_EMAIL=mail
LDAP_MAP_FIRSTNAME=givenName
LDAP_MAP_LASTNAME=sn
LDAP_MAP_DISPLAYNAME=displayName

# Synchronization options
LDAP_AUTO_CREATE_USERS=false
LDAP_UPDATE_EXISTING_USERS=false

# Note: LDAP settings are primarily managed through web interface
# These environment variables are used as fallback/initial configuration
###< LDAP Integration ###