{% extends 'installer/base.html.twig' %}

{% block content %}
<div class="step-indicator">
    <div class="step completed">1</div>
    <div class="step completed">2</div>
    <div class="step active">3</div>
    <div class="step">4</div>
    <div class="step">5</div>
</div>

<div class="text-center mb-4">
    <lord-icon
        src="https://cdn.lordicon.com/surcxhka.json"
        trigger="loop"
        colors="primary:#667eea,secondary:#764ba2"
        class="installer-lord-icon-small">
    </lord-icon>
    <h3 class="mt-3">Konfiguracja bazy danych</h3>
    <p class="text-muted">Tworzenie struktury bazy danych i danych podstawowych</p>
</div>

<form method="post">
    <div class="alert alert-info">
        <div class="d-flex">
            <div class="flex-shrink-0">
                <i class="ri-information-line"></i>
            </div>
            <div class="flex-grow-1 ms-2">
                <h6 class="alert-heading">Informacje o bazie danych</h6>
                <p class="mb-0">
                    System wykorzystuje bazę danych SQLite, która zostanie automatycznie utworzona.
                    W tym kroku zostaną utworzone wszystkie niezbędne tabele oraz dane podstawowe.
                </p>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h6 class="card-title">Co zostanie utworzone:</h6>
            <ul class="list-unstyled">
                <li class="mb-2">
                    <i class="ri-check-line text-success me-2"></i>
                    Struktura tabel systemu
                </li>
                <li class="mb-2">
                    <i class="ri-check-line text-success me-2"></i>
                    Podstawowe moduły systemu (Administracja, Sprzęt)
                </li>
                <li class="mb-2">
                    <i class="ri-check-line text-success me-2"></i>
                    Role systemowe i uprawnienia
                </li>
                <li class="mb-2">
                    <i class="ri-check-line text-success me-2"></i>
                    Kategorie sprzętu
                </li>
            </ul>
        </div>
    </div>

    <div class="card border-primary mt-3 installer-sample-data-card">
        <div class="card-body">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="load_sample_data" value="1" id="loadSampleData">
                <label class="form-check-label" for="loadSampleData">
                    <strong>Załaduj dane przykładowe</strong>
                </label>
            </div>
            <p class="text-muted mb-0 mt-2">
                <small>
                    Opcjonalnie: załaduj przykładowych użytkowników i sprzęt do testowania systemu.
                    Zostanie utworzonych 5 użytkowników i 10 przykładowych pozycji sprzętu.
                </small>
            </p>
        </div>
    </div>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger mt-3">
            <i class="ri-error-warning-line me-2"></i>{{ message }}
        </div>
    {% endfor %}

    <div class="installer-navigation">
        <a href="{{ path('installer_requirements') }}" class="btn btn-outline-secondary">
            <i class="ri-arrow-left-line me-1"></i> Wstecz
        </a>
        
        <button type="submit" class="btn btn-primary">
            <i class="ri-database-2-line me-1"></i> Utwórz bazę danych
        </button>
    </div>
</form>
{% endblock %}

{% block javascript %}
<script>
document.querySelector('form').addEventListener('submit', function(e) {
    const submitBtn = e.target.querySelector('button[type="submit"]');
    submitBtn.innerHTML = '<i class="ri-loader-4-line me-1 spinner-border spinner-border-sm"></i> Tworzenie...';
    submitBtn.disabled = true;
});
</script>
{% endblock %}