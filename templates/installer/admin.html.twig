{% extends 'installer/base.html.twig' %}

{% block content %}
<div class="step-indicator">
    <div class="step completed">1</div>
    <div class="step completed">2</div>
    <div class="step completed">3</div>
    <div class="step active">4</div>
    <div class="step">5</div>
</div>

<div class="text-center mb-4">
    <lord-icon
        src="https://cdn.lordicon.com/hrjifpbq.json"
        trigger="loop"
        colors="primary:#667eea,secondary:#764ba2"
        class="installer-lord-icon-small">
    </lord-icon>
    <h3 class="mt-3">Utworzenie konta administratora</h3>
    <p class="text-muted">Konfiguracja pierwszego użytkownika z uprawnieniami administratora</p>
</div>

<form method="post" class="needs-validation" novalidate>
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="firstName" class="form-label">Imię <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="firstName" name="firstName" required>
                <div class="invalid-feedback">
                    Proszę podać imię.
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label for="lastName" class="form-label">Nazwisko <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="lastName" name="lastName" required>
                <div class="invalid-feedback">
                    Proszę podać nazwisko.
                </div>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label for="username" class="form-label">Nazwa użytkownika <span class="text-danger">*</span></label>
        <input type="text" class="form-control" id="username" name="username" required>
        <div class="form-text">Nazwa używana do logowania do systemu</div>
        <div class="invalid-feedback">
            Proszę podać nazwę użytkownika.
        </div>
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Adres e-mail <span class="text-danger">*</span></label>
        <input type="email" class="form-control" id="email" name="email" required>
        <div class="invalid-feedback">
            Proszę podać prawidłowy adres e-mail.
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="password" class="form-label">Hasło <span class="text-danger">*</span></label>
                <input type="password" class="form-control" id="password" name="password" minlength="6" required>
                <div class="form-text">Minimum 6 znaków</div>
                <div class="invalid-feedback">
                    Hasło musi mieć co najmniej 6 znaków.
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label for="confirmPassword" class="form-label">Potwierdź hasło <span class="text-danger">*</span></label>
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                <div class="invalid-feedback">
                    Hasła muszą być identyczne.
                </div>
            </div>
        </div>
    </div>

    <div class="alert alert-warning installer-warning-card">
        <div class="d-flex">
            <div class="flex-shrink-0">
                <i class="ri-alert-line"></i>
            </div>
            <div class="flex-grow-1 ms-2">
                <h6 class="alert-heading">Ważne informacje</h6>
                <ul class="mb-0">
                    <li>Konto administratora będzie miało pełny dostęp do wszystkich funkcji systemu</li>
                    <li>Zapisz dane logowania w bezpiecznym miejscu</li>
                    <li>Dodatkowych użytkowników można utworzyć później w panelu administracyjnym</li>
                </ul>
            </div>
        </div>
    </div>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            <i class="ri-error-warning-line me-2"></i>{{ message }}
        </div>
    {% endfor %}

    <div class="installer-navigation">
        <a href="{{ path('installer_database') }}" class="btn btn-outline-secondary">
            <i class="ri-arrow-left-line me-1"></i> Wstecz
        </a>
        
        <button type="submit" class="btn btn-primary">
            <i class="ri-user-add-line me-1"></i> Utwórz administratora
        </button>
    </div>
</form>
{% endblock %}

{% block javascript %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('.needs-validation');
    const password = document.getElementById('password');
    const confirmPassword = document.getElementById('confirmPassword');
    
    function validatePassword() {
        if (password.value !== confirmPassword.value) {
            confirmPassword.setCustomValidity('Hasła muszą być identyczne');
        } else {
            confirmPassword.setCustomValidity('');
        }
    }
    
    password.addEventListener('change', validatePassword);
    confirmPassword.addEventListener('keyup', validatePassword);
    
    form.addEventListener('submit', function(event) {
        if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
        } else {
            const submitBtn = form.querySelector('button[type="submit"]');
            submitBtn.innerHTML = '<i class="ri-loader-4-line me-1 spinner-border spinner-border-sm"></i> Tworzenie...';
            submitBtn.disabled = true;
        }
        form.classList.add('was-validated');
    });
});
</script>
{% endblock %}