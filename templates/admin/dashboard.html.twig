{% extends 'base.html.twig' %}

{% block title %}Panel administracyjny - AssetHub{% endblock %}
{% block page_title %}Panel administracyjny{% endblock %}

{% block content %}
<div class="row mb-4">
    <div class="col-12">
        <h4 class="mb-0">
            <i class="ri-settings-line me-2"></i>
            Panel administracyjny
        </h4>
        <p class="text-muted mb-0">Zarządzanie systemem AssetHub</p>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card module-card h-100" onclick="location.href='/admin/users'">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="ri-user-settings-line" style="font-size: 3rem; color: var(--nc-primary);"></i>
                </div>
                <h5 class="card-title">Użytkownicy</h5>
                <p class="card-text text-muted">Zarządzanie kontami użytkowników i pracowników</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card module-card h-100" onclick="location.href='/admin/roles'">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="ri-shield-user-line" style="font-size: 3rem; color: var(--nc-primary);"></i>
                </div>
                <h5 class="card-title">Role i uprawnienia</h5>
                <p class="card-text text-muted">Tworzenie i zarządzanie rolami systemowymi</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card module-card h-100" onclick="location.href='/admin/modules'">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="ri-apps-line" style="font-size: 3rem; color: var(--nc-primary);"></i>
                </div>
                <h5 class="card-title">Moduły</h5>
                <p class="card-text text-muted">Włączanie i konfiguracja modułów systemu</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card module-card h-100" onclick="location.href='/admin/dictionaries'">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="ri-book-open-line" style="font-size: 3rem; color: var(--nc-primary);"></i>
                </div>
                <h5 class="card-title">Słowniki</h5>
                <p class="card-text text-muted">Zarządzanie listami rozwijalnymi i kategoriami</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card module-card h-100" onclick="location.href='/admin/settings'">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="ri-settings-3-line" style="font-size: 3rem; color: var(--nc-primary);"></i>
                </div>
                <h5 class="card-title">Ustawienia</h5>
                <p class="card-text text-muted">Konfiguracja systemu i parametrów</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card module-card h-100" onclick="location.href='/admin/logs'">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="ri-file-text-line" style="font-size: 3rem; color: var(--nc-primary);"></i>
                </div>
                <h5 class="card-title">Logi systemu</h5>
                <p class="card-text text-muted">Przegląd logów i aktywności użytkowników</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="ri-bar-chart-line me-2"></i>
                    Statystyki systemu
                </h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3">
                        <div class="border-end">
                            <h4 class="text-primary mb-1">2</h4>
                            <p class="text-muted mb-0">Aktywni użytkownicy</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="border-end">
                            <h4 class="text-success mb-1">2</h4>
                            <p class="text-muted mb-0">Włączone moduły</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="border-end">
                            <h4 class="text-info mb-1">3</h4>
                            <p class="text-muted mb-0">Zdefiniowane role</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <h4 class="text-warning mb-1">0</h4>
                        <p class="text-muted mb-0">Pozycji sprzętu</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}