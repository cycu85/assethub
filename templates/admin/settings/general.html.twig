{% extends 'base.html.twig' %}

{% block title %}Ustawienia Ogólne - AssetHub{% endblock %}

{% block page_title %}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Ustawienia Ogólne</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Admin</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('admin_settings') }}">Ustawienia</a></li>
                    <li class="breadcrumb-item active">Ogólne</li>
                </ol>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h4 class="card-title mb-0">
                            <i class="ri-settings-3-line me-2"></i>Ustawienia Ogólne
                        </h4>
                        <p class="text-muted mb-0 mt-1">Konfiguruj podstawowe ustawienia aplikacji</p>
                    </div>
                    <div class="flex-shrink-0">
                        <a href="{{ path('admin_settings') }}" class="btn btn-outline-secondary btn-sm">
                            <i class="ri-arrow-left-line me-1"></i>Powrót
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                
                <div class="row">
                    <div class="col-lg-8">
                        <div class="mb-3">
                            {{ form_label(form.app_name, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.app_name) }}
                            {{ form_errors(form.app_name) }}
                            <div class="form-text">
                                <i class="ri-information-line me-1"></i>
                                Nazwa ta będzie wyświetlana w całej aplikacji
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_widget(form.primary_color) }}
                            {{ form_label(form.primary_color_text, null, {'label_attr': {'class': 'form-label'}}) }}
                            <div class="input-group">
                                {{ form_widget(form.primary_color_text, {'value': current_settings.primary_color}) }}
                                <span class="input-group-text" id="color-preview" style="background-color: {{ current_settings.primary_color }}; width: 40px; border-left: none;"></span>
                            </div>
                            {{ form_errors(form.primary_color) }}
                            {{ form_errors(form.primary_color_text) }}
                            <div class="form-text">
                                <i class="ri-information-line me-1"></i>
                                Główny kolor używany w interfejsie aplikacji. Możesz wpisać kolor w formacie HEX (np. #405189, #ff0000, #abc)
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_widget(form.sidebar_bg_color) }}
                            {{ form_label(form.sidebar_bg_color_text, null, {'label_attr': {'class': 'form-label'}}) }}
                            <div class="input-group">
                                {{ form_widget(form.sidebar_bg_color_text, {'value': current_settings.sidebar_bg_color|default('#2a3042')}) }}
                                <span class="input-group-text" id="sidebar-bg-preview" style="background-color: {{ current_settings.sidebar_bg_color|default('#2a3042') }}; width: 40px; border-left: none;"></span>
                            </div>
                            {{ form_errors(form.sidebar_bg_color) }}
                            {{ form_errors(form.sidebar_bg_color_text) }}
                            <div class="form-text">
                                <i class="ri-information-line me-1"></i>
                                Kolor tła menu bocznego (np. #2a3042, #1e293b)
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_widget(form.sidebar_text_color) }}
                            {{ form_label(form.sidebar_text_color_text, null, {'label_attr': {'class': 'form-label'}}) }}
                            <div class="input-group">
                                {{ form_widget(form.sidebar_text_color_text, {'value': current_settings.sidebar_text_color|default('#ffffff')}) }}
                                <span class="input-group-text" id="sidebar-text-preview" style="background-color: {{ current_settings.sidebar_text_color|default('#ffffff') }}; width: 40px; border-left: none;"></span>
                            </div>
                            {{ form_errors(form.sidebar_text_color) }}
                            {{ form_errors(form.sidebar_text_color_text) }}
                            <div class="form-text">
                                <i class="ri-information-line me-1"></i>
                                Kolor tekstu w menu bocznym (np. #ffffff, #e2e8f0)
                            </div>
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.company_logo, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.company_logo) }}
                            {{ form_errors(form.company_logo) }}
                            <div class="form-text">
                                <i class="ri-information-line me-1"></i>
                                Akceptowane formaty: JPG, PNG, GIF, WebP, SVG. Maksymalny rozmiar: 2MB
                            </div>
                        </div>

                        <div class="d-flex justify-content-start">
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                            <a href="{{ path('admin_settings') }}" class="btn btn-outline-secondary ms-2">Anuluj</a>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="card border border-light">
                            <div class="card-header">
                                <h6 class="card-title mb-0">
                                    <i class="ri-eye-line me-2"></i>Podgląd
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="text-center">
                                    <div class="mb-3">
                                        <img src="{{ current_settings.company_logo }}" 
                                             alt="Logo" 
                                             class="img-fluid" 
                                             style="max-height: 80px; max-width: 200px;"
                                             id="logo-preview">
                                    </div>
                                    <h5 class="mb-2" id="app-name-preview">{{ current_settings.app_name }}</h5>
                                    <div class="mb-3">
                                        <span class="badge" 
                                              style="background-color: {{ current_settings.primary_color }}; color: white;"
                                              id="color-badge-preview">
                                            Przycisk główny
                                        </span>
                                    </div>
                                    
                                    <!-- Podgląd menu -->
                                    <div class="border rounded p-2 mb-3" style="max-width: 200px; margin: 0 auto;">
                                        <div class="small text-muted mb-2">Podgląd menu:</div>
                                        <div class="rounded p-2" 
                                             id="menu-preview" 
                                             style="background-color: {{ current_settings.sidebar_bg_color|default('#2a3042') }};">
                                            <div style="color: {{ current_settings.sidebar_text_color|default('#ffffff') }}; font-size: 12px;" 
                                                 id="menu-text-preview">
                                                <i class="ri-dashboard-line me-1"></i>Dashboard
                                            </div>
                                            <div style="color: {{ current_settings.sidebar_text_color|default('#ffffff') }}; font-size: 12px; opacity: 0.7;" 
                                                 id="menu-text-preview-2">
                                                <i class="ri-settings-line me-1"></i>Ustawienia
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <small class="text-muted">Podgląd na żywo</small>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="ri-lightbulb-line"></i>
                                </div>
                                <div class="flex-grow-1 ms-2">
                                    <h6 class="alert-heading">Wskazówka</h6>
                                    <p class="mb-0">
                                        Zmiany zostaną zastosowane natychmiast po zapisaniu. 
                                        Może być konieczne odświeżenie strony, aby zobaczyć wszystkie zmiany.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Aktualizacja podglądu nazwy aplikacji
    const appNameInput = document.getElementById('{{ form.app_name.vars.id }}');
    const appNamePreview = document.getElementById('app-name-preview');
    
    if (appNameInput && appNamePreview) {
        appNameInput.addEventListener('input', function() {
            appNamePreview.textContent = this.value || '{{ current_settings.app_name }}';
        });
    }

    // Aktualizacja podglądu koloru
    const colorInput = document.getElementById('{{ form.primary_color.vars.id }}');
    const colorPreview = document.getElementById('color-preview');
    const colorText = document.getElementById('{{ form.primary_color_text.vars.id }}');
    const colorBadgePreview = document.getElementById('color-badge-preview');
    
    function updateColorPreview(color) {
        if (isValidHexColor(color)) {
            colorPreview.style.backgroundColor = color;
            colorBadgePreview.style.backgroundColor = color;
            colorText.classList.remove('is-invalid');
            colorText.classList.add('is-valid');
        } else {
            colorText.classList.remove('is-valid');
            colorText.classList.add('is-invalid');
        }
    }
    
    function isValidHexColor(color) {
        return /^#[0-9A-Fa-f]{6}$/.test(color);
    }
    
    if (colorPreview && colorText && colorBadgePreview) {
        // Pole tekstowe zmienia podgląd
        colorText.addEventListener('input', function() {
            const color = this.value;
            updateColorPreview(color);
        });
        
        // Walidacja przy opuszczeniu pola
        colorText.addEventListener('blur', function() {
            let color = this.value.trim();
            
            // Automatycznie dodaj # jeśli brakuje
            if (color && !color.startsWith('#')) {
                color = '#' + color;
                this.value = color;
            }
            
            // Sprawdź czy ma 3 znaki hex i rozszerz do 6
            if (/^#[0-9A-Fa-f]{3}$/.test(color)) {
                color = '#' + color[1] + color[1] + color[2] + color[2] + color[3] + color[3];
                this.value = color;
            }
            
            updateColorPreview(color);
        });
        
        // Synchronizacja przed submitem formularza
        const form = document.querySelector('form');
        if (form && colorInput) {
            form.addEventListener('submit', function(e) {
                // Przekaż wartość z pola tekstowego do ukrytego pola
                const textColor = colorText.value.trim();
                if (isValidHexColor(textColor)) {
                    colorInput.value = textColor;
                } else if (textColor) {
                    // Jeśli kolor nieprawidłowy, zatrzymaj submit
                    e.preventDefault();
                    colorText.focus();
                    alert('Proszę wprowadzić prawidłowy kolor główny w formacie HEX (np. #405189)');
                    return;
                }
            });
        }
    }

    // Obsługa kolorów sidebar
    const sidebarBgInput = document.getElementById('{{ form.sidebar_bg_color.vars.id }}');
    const sidebarBgPreview = document.getElementById('sidebar-bg-preview');
    const sidebarBgText = document.getElementById('{{ form.sidebar_bg_color_text.vars.id }}');
    const menuPreview = document.getElementById('menu-preview');
    
    const sidebarTextInput = document.getElementById('{{ form.sidebar_text_color.vars.id }}');
    const sidebarTextPreview = document.getElementById('sidebar-text-preview');
    const sidebarTextText = document.getElementById('{{ form.sidebar_text_color_text.vars.id }}');
    const menuTextPreview = document.getElementById('menu-text-preview');
    const menuTextPreview2 = document.getElementById('menu-text-preview-2');
    
    function updateSidebarPreview() {
        const bgColor = sidebarBgText.value || '#2a3042';
        const textColor = sidebarTextText.value || '#ffffff';
        
        if (isValidHexColor(bgColor)) {
            sidebarBgPreview.style.backgroundColor = bgColor;
            menuPreview.style.backgroundColor = bgColor;
            sidebarBgText.classList.remove('is-invalid');
            sidebarBgText.classList.add('is-valid');
        } else {
            sidebarBgText.classList.remove('is-valid');
            sidebarBgText.classList.add('is-invalid');
        }
        
        if (isValidHexColor(textColor)) {
            sidebarTextPreview.style.backgroundColor = textColor;
            menuTextPreview.style.color = textColor;
            menuTextPreview2.style.color = textColor;
            sidebarTextText.classList.remove('is-invalid');
            sidebarTextText.classList.add('is-valid');
        } else {
            sidebarTextText.classList.remove('is-valid');
            sidebarTextText.classList.add('is-invalid');
        }
    }
    
    if (sidebarBgText && sidebarTextText) {
        // Sidebar background color
        sidebarBgText.addEventListener('input', updateSidebarPreview);
        sidebarBgText.addEventListener('blur', function() {
            let color = this.value.trim();
            if (color && !color.startsWith('#')) {
                color = '#' + color;
                this.value = color;
            }
            if (/^#[0-9A-Fa-f]{3}$/.test(color)) {
                color = '#' + color[1] + color[1] + color[2] + color[2] + color[3] + color[3];
                this.value = color;
            }
            updateSidebarPreview();
        });
        
        // Sidebar text color
        sidebarTextText.addEventListener('input', updateSidebarPreview);
        sidebarTextText.addEventListener('blur', function() {
            let color = this.value.trim();
            if (color && !color.startsWith('#')) {
                color = '#' + color;
                this.value = color;
            }
            if (/^#[0-9A-Fa-f]{3}$/.test(color)) {
                color = '#' + color[1] + color[1] + color[2] + color[2] + color[3] + color[3];
                this.value = color;
            }
            updateSidebarPreview();
        });
        
        // Submit form handling dla sidebar
        if (form) {
            form.addEventListener('submit', function(e) {
                // Sidebar bg color
                const bgColor = sidebarBgText.value.trim();
                if (bgColor && isValidHexColor(bgColor) && sidebarBgInput) {
                    sidebarBgInput.value = bgColor;
                } else if (bgColor) {
                    e.preventDefault();
                    sidebarBgText.focus();
                    alert('Proszę wprowadzić prawidłowy kolor tła menu w formacie HEX (np. #2a3042)');
                    return;
                }
                
                // Sidebar text color
                const textColor = sidebarTextText.value.trim();
                if (textColor && isValidHexColor(textColor) && sidebarTextInput) {
                    sidebarTextInput.value = textColor;
                } else if (textColor) {
                    e.preventDefault();
                    sidebarTextText.focus();
                    alert('Proszę wprowadzić prawidłowy kolor tekstu menu w formacie HEX (np. #ffffff)');
                    return;
                }
            });
        }
    }

    // Podgląd logo
    const logoInput = document.getElementById('{{ form.company_logo.vars.id }}');
    const logoPreview = document.getElementById('logo-preview');
    
    if (logoInput && logoPreview) {
        logoInput.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    logoPreview.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    }
});
</script>
{% endblock %}