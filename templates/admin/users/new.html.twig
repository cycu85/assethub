{% extends 'base.html.twig' %}

{% block title %}Dodaj użytkownika - AssetHub{% endblock %}
{% block page_title %}Dodaj nowego użytkownika{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="/">Strona główna</a></li>
    <li class="breadcrumb-item"><a href="/admin">Administracja</a></li>
    <li class="breadcrumb-item"><a href="{{ path('admin_users_index') }}">Użytkownicy</a></li>
    <li class="breadcrumb-item active">Dodaj użytkownika</li>
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <h5 class="card-title mb-0 flex-grow-1">Dodaj nowego użytkownika</h5>
                    <div class="flex-shrink-0">
                        <a href="{{ path('admin_users_index') }}" class="btn btn-outline-secondary">
                            <i class="ri-arrow-left-line align-bottom me-1"></i> Powrót
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.firstName) }}
                            {{ form_widget(form.firstName) }}
                            <div class="invalid-feedback">
                                Proszę podać imię.
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.lastName) }}
                            {{ form_widget(form.lastName) }}
                            <div class="invalid-feedback">
                                Proszę podać nazwisko.
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.username) }}
                            {{ form_widget(form.username) }}
                            <div class="invalid-feedback">
                                Proszę podać nazwę użytkownika.
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email) }}
                            <div class="invalid-feedback">
                                Proszę podać prawidłowy adres email.
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.employeeNumber) }}
                            {{ form_widget(form.employeeNumber) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.position) }}
                            {{ form_widget(form.position) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.department) }}
                            {{ form_widget(form.department) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.phoneNumber) }}
                            {{ form_widget(form.phoneNumber) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.plainPassword) }}
                            {{ form_widget(form.plainPassword) }}
                            <div class="invalid-feedback">
                                Hasło musi mieć co najmniej 6 znaków.
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3 d-flex align-items-end">
                            <div class="form-check">
                                {{ form_widget(form.isActive) }}
                                {{ form_label(form.isActive) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-end">
                    <a href="{{ path('admin_users_index') }}" class="btn btn-secondary me-2">Anuluj</a>
                    <button type="submit" class="btn btn-success">
                        <i class="ri-save-line align-bottom me-1"></i> Utwórz użytkownika
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascript %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Form validation
    const form = document.querySelector('.needs-validation');
    form.addEventListener('submit', function(event) {
        if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
        }
        form.classList.add('was-validated');
    });
});
</script>
{% endblock %}