{% extends 'base.html.twig' %}

{% block title %}Edytuj pracownika - {{ app_name() }}{% endblock %}

{% block page_title %}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Edytuj pracownika</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Admin</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('admin_users_index') }}">Pracownicy</a></li>
                    <li class="breadcrumb-item active">Edytuj</li>
                </ol>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h4 class="card-title mb-0">
                            <i class="ri-user-line me-2"></i>Edytuj pracownika: {{ user.firstName }} {{ user.lastName }}
                        </h4>
                        <p class="text-muted mb-0 mt-1">Zaktualizuj dane pracownika</p>
                    </div>
                    <div class="flex-shrink-0">
                        <a href="{{ path('admin_users_index') }}" class="btn btn-outline-secondary btn-sm">
                            <i class="ri-arrow-left-line me-1"></i>Powrót do listy
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}
                
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card border border-light">
                            <div class="card-header">
                                <h6 class="card-title mb-0">
                                    <i class="ri-user-settings-line me-2"></i>Podstawowe informacje
                                </h6>
                            </div>
                            <div class="card-body">
                                {% if has_full_permission %}
                                <div class="mb-3">
                                    {{ form_label(form.username) }}
                                    {{ form_widget(form.username) }}
                                    {{ form_errors(form.username) }}
                                </div>
                                {% endif %}

                                <div class="mb-3">
                                    {{ form_label(form.email) }}
                                    {{ form_widget(form.email) }}
                                    {{ form_errors(form.email) }}
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            {{ form_label(form.firstName) }}
                                            {{ form_widget(form.firstName) }}
                                            {{ form_errors(form.firstName) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            {{ form_label(form.lastName) }}
                                            {{ form_widget(form.lastName) }}
                                            {{ form_errors(form.lastName) }}
                                        </div>
                                    </div>
                                </div>

                                {% if has_full_permission %}
                                <div class="mb-3">
                                    {{ form_label(form.plainPassword) }}
                                    {{ form_widget(form.plainPassword) }}
                                    {{ form_errors(form.plainPassword) }}
                                    <div class="form-text">
                                        <i class="ri-information-line me-1"></i>
                                        Pozostaw puste, jeśli nie chcesz zmieniać hasła
                                    </div>
                                </div>

                                <div class="form-check form-switch form-switch-lg mb-3">
                                    {{ form_widget(form.isActive) }}
                                    {{ form_label(form.isActive, null, {'label_attr': {'class': 'form-check-label ms-2'}}) }}
                                    {{ form_errors(form.isActive) }}
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="card border border-light">
                            <div class="card-header">
                                <h6 class="card-title mb-0">
                                    <i class="ri-building-line me-2"></i>Informacje organizacyjne
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    {{ form_label(form.employeeNumber) }}
                                    {{ form_widget(form.employeeNumber) }}
                                    {{ form_errors(form.employeeNumber) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.position) }}
                                    {{ form_widget(form.position) }}
                                    {{ form_errors(form.position) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.department) }}
                                    {{ form_widget(form.department) }}
                                    {{ form_errors(form.department) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.phoneNumber) }}
                                    {{ form_widget(form.phoneNumber) }}
                                    {{ form_errors(form.phoneNumber) }}
                                </div>
                            </div>
                        </div>

                        <!-- Panel informacyjny -->
                        <div class="card border border-info">
                            <div class="card-header">
                                <h6 class="card-title mb-0">
                                    <i class="ri-information-line me-2"></i>Informacje o koncie
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-6">
                                        <p class="text-muted mb-1">Data utworzenia:</p>
                                        <p class="mb-2">{{ user.createdAt ? user.createdAt|date('d.m.Y H:i') : 'Brak danych' }}</p>
                                    </div>
                                    <div class="col-6">
                                        <p class="text-muted mb-1">Ostatnia aktualizacja:</p>
                                        <p class="mb-2">{{ user.updatedAt ? user.updatedAt|date('d.m.Y H:i') : 'Nigdy' }}</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <p class="text-muted mb-1">Status konta:</p>
                                        <span class="badge bg-{{ user.isActive ? 'success' : 'danger' }}-subtle text-{{ user.isActive ? 'success' : 'danger' }}">
                                            {{ user.isActive ? 'Aktywne' : 'Nieaktywne' }}
                                        </span>
                                    </div>
                                    <div class="col-6">
                                        <p class="text-muted mb-1">Liczba ról:</p>
                                        <span class="badge bg-info-subtle text-info">
                                            {{ user.userRoles|length }} ról
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="d-flex justify-content-start gap-2 mt-3">
                            <button type="submit" class="btn btn-success">
                                <i class="ri-save-line me-1"></i>Zapisz zmiany
                            </button>
                            {% if has_full_permission %}
                            <a href="{{ path('admin_users_roles', {id: user.id}) }}" class="btn btn-primary">
                                <i class="ri-shield-user-line me-1"></i>Zarządzaj rolami
                            </a>
                            {% endif %}
                            <a href="{{ path('admin_users_index') }}" class="btn btn-outline-secondary">
                                <i class="ri-arrow-left-line me-1"></i>Anuluj
                            </a>
                        </div>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Walidacja formularza
    const form = document.querySelector('.needs-validation');
    
    if (form) {
        form.addEventListener('submit', function(event) {
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }
            form.classList.add('was-validated');
        });
    }
    
    // Automatyczne focus na pierwszym polu
    const firstInput = form.querySelector('input[type="text"]:not([readonly])');
    if (firstInput) {
        firstInput.focus();
    }
});
</script>
{% endblock %}