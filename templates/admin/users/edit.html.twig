                        <!-- Sekcja Dane LDAP - tylko dla system_admin i użytkowników LDAP -->
                        <div class="card border border-warning mt-3">
                            <div class="card-header">
                                <h6 class="card-title mb-0">
                                    <i class="ri-shield-keyhole-line me-2"></i>Dane LDAP
                                    <span class="badge bg-warning-subtle text-warning ms-2">System Admin</span>
                                </h6>
                            </div>
                            <div class="card-body">
                                {% if ldap_data.error is defined and ldap_data.error %}
                                <div class="alert alert-warning">
                                    <i class="ri-error-warning-line me-2"></i>
                                    <strong>Błąd połączenia z LDAP:</strong> {{ ldap_data.error }}
                                    <div class="mt-2">
                                        <button type="button" class="btn btn-sm btn-outline-warning" onclick="refreshLdapData('{{ user.id }}')">
                                            <i class="ri-refresh-line me-1"></i>Spróbuj ponownie
                                        </button>
                                    </div>
                                </div>
                                {% else %}
                                <div class="row">
                                    <div class="col-md-6">
                                        <p class="text-muted mb-1">Ważność hasła:</p>
                                        <p class="mb-2">
                                            {% if ldap_data.password_expires %}
                                                {% set now = date() %}
                                                {% set expires = ldap_data.password_expires %}
                                                {% set days_to_expiry = (expires.timestamp - now.timestamp) // 86400 %}
                                                {% if days_to_expiry < 0 %}
                                                    <span class="badge bg-danger-subtle text-danger">
                                                        <i class="ri-error-warning-line me-1"></i>Wygasło {{ (-days_to_expiry) }} dni temu
                                                    </span>
                                                {% elseif days_to_expiry < 7 %}
                                                    <span class="badge bg-warning-subtle text-warning">
                                                        <i class="ri-alarm-warning-line me-1"></i>Wygasa za {{ days_to_expiry }} dni
                                                    </span>
                                                {% else %}
                                                    <span class="badge bg-success-subtle text-success">
                                                        <i class="ri-checkbox-circle-line me-1"></i>{{ ldap_data.password_expires|date('d.m.Y') }} ({{ days_to_expiry }} dni)
                                                    </span>
                                                {% endif %}
                                            {% else %}
                                                <span class="text-muted">Brak danych</span>
                                            {% endif %}
                                        </p>
                                    </div>
                                    <div class="col-md-6">
                                        <p class="text-muted mb-1">Data ostatniej zmiany hasła:</p>
                                        <p class="mb-2">
                                            {% if ldap_data.password_last_set %}
                                                {{ ldap_data.password_last_set|date('d.m.Y H:i') }}
                                            {% else %}
                                                <span class="text-muted">Brak danych</span>
                                            {% endif %}
                                        </p>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <p class="text-muted mb-1">Ostatnie prawidłowe logowanie:</p>
                                        <p class="mb-2">
                                            {% if ldap_data.last_successful_login %}
                                                <span class="badge bg-success-subtle text-success">
                                                    <i class="ri-login-circle-line me-1"></i>{{ ldap_data.last_successful_login|date('d.m.Y H:i') }}
                                                </span>
                                            {% else %}
                                                <span class="text-muted">Brak danych</span>
                                            {% endif %}
                                        </p>
                                    </div>
                                    <div class="col-md-6">
                                        <p class="text-muted mb-1">Ostatnie błędne logowanie:</p>
                                        <p class="mb-2">
                                            {% if ldap_data.last_failed_login %}
                                                <span class="badge bg-warning-subtle text-warning">
                                                    <i class="ri-error-warning-line me-1"></i>{{ ldap_data.last_failed_login|date('d.m.Y H:i') }}
                                                </span>
                                            {% else %}
                                                <span class="badge bg-success-subtle text-success">
                                                    <i class="ri-shield-check-line me-1"></i>Brak błędnych prób
                                                </span>
                                            {% endif %}
                                        </p>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <p class="text-muted mb-1">Status blokady konta:</p>
                                        <p class="mb-2">
                                            {% if ldap_data.account_locked %}
                                                <span class="badge bg-danger-subtle text-danger">
                                                    <i class="ri-lock-line me-1"></i>Konto zablokowane
                                                </span>
                                            {% else %}
                                                <span class="badge bg-success-subtle text-success">
                                                    <i class="ri-lock-unlock-line me-1"></i>Konto odblokowane
                                                </span>
                                            {% endif %}
                                        </p>
                                    </div>
                                    <div class="col-md-6">
                                        <p class="text-muted mb-1">Liczba błędnych logowań:</p>
                                        <p class="mb-2">
                                            {% if ldap_data.failed_login_count > 0 %}
                                                {% if ldap_data.failed_login_count >= 5 %}
                                                    <span class="badge bg-danger-subtle text-danger">
                                                        <i class="ri-alarm-warning-line me-1"></i>{{ ldap_data.failed_login_count }} prób
                                                    </span>
                                                {% elseif ldap_data.failed_login_count >= 3 %}
                                                    <span class="badge bg-warning-subtle text-warning">
                                                        <i class="ri-error-warning-line me-1"></i>{{ ldap_data.failed_login_count }} prób
                                                    </span>
                                                {% else %}
                                                    <span class="badge bg-info-subtle text-info">
                                                        {{ ldap_data.failed_login_count }} prób
                                                    </span>
                                                {% endif %}
                                            {% else %}
                                                <span class="badge bg-success-subtle text-success">
                                                    <i class="ri-checkbox-circle-line me-1"></i>0 prób
                                                </span>
                                            {% endif %}
                                        </p>
                                    </div>
                                </div>

                                <!-- Akcje LDAP -->
                                <div class="row mt-3">
                                    <div class="col-12">
                                        <div class="d-flex flex-wrap gap-2">
                                            {% if ldap_data.account_locked %}
                                            <button type="button" class="btn btn-warning btn-sm" onclick="unlockAccount('{{ user.id }}')">
                                                <i class="ri-lock-unlock-line me-1"></i>Odblokuj konto
                                            </button>
                                            {% endif %}
                                            
                                            <button type="button" class="btn btn-info btn-sm" onclick="resetPassword('{{ user.id }}')">
                                                <i class="ri-key-2-line me-1"></i>Resetuj hasło
                                            </button>
                                            
                                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="refreshLdapData('{{ user.id }}')">
                                                <i class="ri-refresh-line me-1"></i>Odśwież dane LDAP
                                            </button>
                                        </div>
                                        
                                        <div class="form-text mt-2">
                                            <i class="ri-information-line me-1"></i>
                                            Dane LDAP są odświeżane automatycznie co 15 minut. Ostatnia aktualizacja: 
                                            <strong>{{ ldap_data.last_updated ? ldap_data.last_updated|date('d.m.Y H:i') : 'Nigdy' }}</strong>
                                        </div>
                                    </div>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Sekcja Podwładni -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card border border-light">
                            <div class="card-header">
                                <h6 class="card-title mb-0">
                                    <i class="ri-team-line me-2"></i>Podwładni
                                    <span class="badge bg-primary-subtle text-primary ms-2">{{ subordinates|length }}</span>
                                </h6>
                            </div>
                            <div class="card-body">
                                {% if subordinates|length > 0 %}
                                    <div class="table-responsive">
                                        <table class="table table-sm table-hover">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>Pracownik</th>
                                                    <th>Stanowisko</th>
                                                    <th>Oddział</th>
                                                    <th>Status</th>
                                                    <th>Akcje</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for subordinate in subordinates %}
                                                <tr>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="avatar-xs me-2">
                                                                <div class="avatar-title bg-soft-primary text-primary rounded-circle">
                                                                    {{ subordinate.firstName|first|upper }}{{ subordinate.lastName|first|upper }}
                                                                </div>
                                                            </div>
                                                            <div>
                                                                <h6 class="mb-0">{{ subordinate.fullName }}</h6>
                                                                <p class="text-muted mb-0 small">{{ subordinate.username }}</p>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>{{ subordinate.position ?? 'Brak danych' }}</td>
                                                    <td>
                                                        {% if subordinate.branch %}
                                                            <span class="badge bg-info-subtle text-info">
                                                                {{ subordinate.branch }}
                                                            </span>
                                                        {% else %}
                                                            <span class="text-muted">-</span>
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        {% if subordinate.status %}
                                                            <span class="badge bg-success-subtle text-success">
                                                                {{ subordinate.status }}
                                                            </span>
                                                        {% else %}
                                                            <span class="text-muted">-</span>
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        {% if can_edit %}
                                                        <a href="{{ path('admin_users_edit', {id: subordinate.id}) }}" 
                                                           class="btn btn-sm btn-outline-primary" 
                                                           title="Edytuj pracownika">
                                                            <i class="ri-edit-line"></i>
                                                        </a>
                                                        {% endif %}
                                                    </td>
                                                </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                {% else %}
                                    <div class="text-center py-4">
                                        <div class="avatar-lg mx-auto mb-3">
                                            <div class="avatar-title bg-soft-secondary text-secondary rounded-circle">
                                                <i class="ri-team-line fs-24"></i>
                                            </div>
                                        </div>
                                        <h5 class="text-muted">Brak podwładnych</h5>
                                        <p class="text-muted mb-0">Ten pracownik nie ma przypisanych podwładnych.</p>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="d-flex justify-content-start gap-2 mt-3">
                            <button type="submit" class="btn btn-success">
                                <i class="ri-save-line me-1"></i>Zapisz zmiany
                            </button>
