{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Walidacja formularza
    const form = document.querySelector('.needs-validation');
    
    if (form) {
        form.addEventListener('submit', function(event) {
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }
            form.classList.add('was-validated');
        });
    }
    
    // Automatyczne focus na pierwszym polu
    const firstInput = form.querySelector('input[type="text"]:not([readonly])');
    if (firstInput) {
        firstInput.focus();
    }
});

// Funkcje LDAP - tylko dla system_admin i użytkowników LDAP
{% if is_system_admin and is_ldap_user %}

// Odblokowanie konta LDAP
function unlockAccount(userId) {
    if (confirm('Czy na pewno chcesz odblokować to konto LDAP?')) {
        const button = event.target.closest('button');
        button.disabled = true;
        button.innerHTML = '<i class="ri-loader-line me-1"></i>Odblokowuję...';
        
        fetch(`/admin/users/${userId}/ldap/unlock`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                showAlert('success', 'Konto zostało pomyślnie odblokowane w LDAP');
                // Odśwież sekcję LDAP
                refreshLdapData(userId);
            } else {
                showAlert('error', data.message || 'Wystąpił błąd podczas odblokowywania konta');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showAlert('error', 'Wystąpił błąd podczas komunikacji z serwerem');
        })
        .finally(() => {
            button.disabled = false;
            button.innerHTML = '<i class="ri-lock-unlock-line me-1"></i>Odblokuj konto';
        });
    }
}

// Reset hasła LDAP
function resetPassword(userId) {
    showResetPasswordModal(userId);
}

// Pokaż modal potwierdzenia resetowania hasła
function showResetPasswordModal(userId) {
    const modalHtml = `
        <div class="modal fade" id="resetPasswordConfirmModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="ri-key-2-line me-2"></i>Resetowanie hasła LDAP
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="alert alert-info">
                            <i class="ri-information-line me-2"></i>
                            <strong>Uwaga!</strong> Zostanie wygenerowane nowe tymczasowe hasło.
                        </div>
                        <p>Czy na pewno chcesz zresetować hasło tego użytkownika w LDAP?</p>
                        
                        <div class="form-check mt-3">
                            <input class="form-check-input" type="checkbox" id="sendEmailNotification">
                            <label class="form-check-label" for="sendEmailNotification">
                                <i class="ri-mail-line me-1"></i>Wyślij powiadomienie email z nowym hasłem
                            </label>
                            <div class="form-text">
                                Email zostanie wysłany jeśli użytkownik ma podany adres email
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                        <button type="button" class="btn btn-warning" onclick="performPasswordReset(${userId})">
                            <i class="ri-key-2-line me-1"></i>Resetuj hasło
                        </button>
                    </div>
                </div>
            </div>
        </div>
    `;
    
    // Usuń istniejący modal jeśli istnieje
    const existingModal = document.getElementById('resetPasswordConfirmModal');
    if (existingModal) {
        existingModal.remove();
    }
    
    // Dodaj nowy modal
    document.body.insertAdjacentHTML('beforeend', modalHtml);
    
    // Pokaż modal
    const modal = new bootstrap.Modal(document.getElementById('resetPasswordConfirmModal'));
    modal.show();
    
    // Usuń modal po zamknięciu
    document.getElementById('resetPasswordConfirmModal').addEventListener('hidden.bs.modal', function() {
        this.remove();
    });
}

// Wykonaj reset hasła
function performPasswordReset(userId) {
    const sendEmail = document.getElementById('sendEmailNotification').checked;
    const confirmModal = bootstrap.Modal.getInstance(document.getElementById('resetPasswordConfirmModal'));
    confirmModal.hide();
    
    // Znajdź przycisk resetowania (dla UX)
    const button = document.querySelector(`button[onclick="resetPassword('${userId}')"]`);
    if (button) {
        button.disabled = true;
        button.innerHTML = '<i class="ri-loader-line me-1"></i>Resetuję...';
    }
    
    fetch(`/admin/users/${userId}/ldap/reset-password`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
        },
        body: JSON.stringify({
            send_email: sendEmail
        })
    })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                let message = `Hasło zostało zresetowane. Nowe hasło: <strong>${data.new_password}</strong>`;
                if (data.email_sent) {
                    message += '<br><i class="ri-mail-check-line me-1"></i>Powiadomienie email zostało wysłane.';
                } else if (data.email_error) {
                    message += '<br><i class="ri-mail-close-line me-1"></i>Błąd wysyłania emaila: ' + data.email_error;
                }
                showAlert('success', message);
                // Pokaż modal z nowym hasłem
                showPasswordResetModal(data.new_password);
            } else {
                showAlert('error', data.message || 'Wystąpił błąd podczas resetowania hasła');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showAlert('error', 'Wystąpił błąd podczas komunikacji z serwerem');
        })
        .finally(() => {
            if (button) {
                button.disabled = false;
                button.innerHTML = '<i class="ri-key-2-line me-1"></i>Resetuj hasło';
            }
        });
}

// Odświeżenie danych LDAP
function refreshLdapData(userId) {
    const button = event.target.closest('button');
    button.disabled = true;
    button.innerHTML = '<i class="ri-loader-line me-1"></i>Odświeżam...';
    
    fetch(`/admin/users/${userId}/ldap/refresh`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            showAlert('success', 'Dane LDAP zostały odświeżone');
            // Przeładuj stronę aby pokazać aktualne dane
            setTimeout(() => {
                window.location.reload();
            }, 1500);
        } else {
            showAlert('error', data.message || 'Wystąpił błąd podczas odświeżania danych LDAP');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        showAlert('error', 'Wystąpił błąd podczas komunikacji z serwerem');
    })
    .finally(() => {
        button.disabled = false;
        button.innerHTML = '<i class="ri-refresh-line me-1"></i>Odśwież dane LDAP';
    });
}

// Pokaż modal z nowym hasłem
function showPasswordResetModal(newPassword) {
    const modalHtml = `
        <div class="modal fade" id="passwordResetModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="ri-key-2-line me-2"></i>Hasło zostało zresetowane
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="alert alert-warning">
                            <i class="ri-alarm-warning-line me-2"></i>
                            <strong>Uwaga!</strong> Nowe tymczasowe hasło zostanie pokazane tylko raz. Zapisz je w bezpiecznym miejscu.
                        </div>
                        <div class="text-center">
                            <h6 class="mb-2">Nowe tymczasowe hasło:</h6>
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h4 class="text-primary font-monospace" id="newPasswordText">${newPassword}</h4>
                                </div>
                            </div>
                            <button type="button" class="btn btn-outline-primary btn-sm mt-2" onclick="copyToClipboard('${newPassword}')">
                                <i class="ri-file-copy-line me-1"></i>Skopiuj do schowka
                            </button>
                        </div>
                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="ri-information-line me-1"></i>
                                Użytkownik będzie musiał zmienić hasło przy pierwszym logowaniu.
                            </small>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zamknij</button>
                    </div>
                </div>
            </div>
        </div>
    `;
    
    // Usuń istniejący modal jeśli istnieje
    const existingModal = document.getElementById('passwordResetModal');
    if (existingModal) {
        existingModal.remove();
    }
    
    // Dodaj nowy modal
    document.body.insertAdjacentHTML('beforeend', modalHtml);
    
    // Pokaż modal
    const modal = new bootstrap.Modal(document.getElementById('passwordResetModal'));
    modal.show();
    
    // Usuń modal po zamknięciu
    document.getElementById('passwordResetModal').addEventListener('hidden.bs.modal', function() {
        this.remove();
    });
}

// Kopiuj do schowka
function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(function() {
        showAlert('success', 'Hasło zostało skopiowane do schowka');
    }).catch(function(err) {
        console.error('Błąd kopiowania: ', err);
        showAlert('error', 'Nie udało się skopiować hasła do schowka');
    });
}

// Pokaż alert
function showAlert(type, message) {
    const alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
    const iconClass = type === 'success' ? 'ri-checkbox-circle-line' : 'ri-error-warning-line';
    
    const alertHtml = `
        <div class="alert ${alertClass} alert-dismissible fade show position-fixed" 
             style="top: 20px; right: 20px; z-index: 9999; min-width: 350px;" role="alert">
            <i class="${iconClass} me-2"></i>
            ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    `;
    
    document.body.insertAdjacentHTML('beforeend', alertHtml);
    
    // Automatyczne ukrywanie po 5 sekundach
    setTimeout(() => {
        const alerts = document.querySelectorAll('.alert');
        if (alerts.length > 0) {
            alerts[alerts.length - 1].remove();
        }
    }, 5000);
}

