<header id="page-topbar">
    <div class="layout-width">
        <div class="navbar-header">
            <div class="d-flex">
                <!-- LOGO -->
                <div class="navbar-brand-box horizontal-logo">
                    <a href="/" class="logo logo-dark">
                        <span class="logo-sm">
                            <img src="assets/images/logo-sm.png" alt="" height="22">
                        </span>
                        <span class="logo-lg">
                            <img src="{{ company_logo() }}" alt="{{ app_name() }}" height="17">
                        </span>
                    </a>

                    <a href="/" class="logo logo-light">
                        <span class="logo-sm">
                            <img src="assets/images/logo-sm.png" alt="" height="22">
                        </span>
                        <span class="logo-lg">
                            <img src="{{ company_logo() }}" alt="{{ app_name() }}" height="17">
                        </span>
                    </a>
                </div>

                <button type="button" class="btn btn-sm px-3 fs-16 header-item vertical-menu-btn topnav-hamburger" id="topnav-hamburger-icon">
                    <span class="hamburger-icon">
                        <span></span>
                        <span></span>
                        <span></span>
                    </span>
                </button>

                <!-- App Search-->
                <form class="app-search d-none d-md-block">
                    <div class="position-relative">
                        <input type="text" class="form-control" placeholder="Szukaj aktywów, użytkowników..." autocomplete="off" id="search-options" value="">
                        <span class="mdi mdi-magnify search-widget-icon"></span>
                        <span class="mdi mdi-close-circle search-widget-icon search-widget-icon-close d-none" id="search-close-options"></span>
                    </div>
                    <div class="dropdown-menu dropdown-menu-lg" id="search-dropdown">
                        <div data-simplebar style="max-height: 320px;">
                            <div class="dropdown-header">
                                <h6 class="text-overflow text-muted mb-0 text-uppercase">Wyniki wyszukiwania</h6>
                            </div>
                            <div class="text-center py-4">
                                <div class="avatar-md mx-auto mb-4">
                                    <div class="avatar-title bg-primary-subtle text-primary fs-24 rounded-circle">
                                        <i class="ri-search-line"></i>
                                    </div>
                                </div>
                                <p class="text-muted">Wprowadź tekst aby wyszukać aktywa lub użytkowników</p>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="d-flex align-items-center">

                <div class="dropdown d-md-none topbar-head-dropdown header-item">
                    <button type="button" class="btn btn-icon btn-topbar btn-ghost-secondary rounded-circle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="ri-apps-2-line fs-22"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-end p-3" aria-labelledby="page-header-search-dropdown">
                        <h6 class="dropdown-header">Szybki dostęp</h6>
                        <div class="row g-2">
                            <div class="col-6">
                                <a href="{{ path('dashboard') }}" class="dropdown-item text-center p-3">
                                    <i class="ri-dashboard-line fs-24 text-primary mb-2"></i>
                                    <div class="fs-13">Dashboard</div>
                                </a>
                            </div>
                            {% if is_granted_module('employees') %}
                            <div class="col-6">
                                <a href="{{ path('admin_users_index') }}" class="dropdown-item text-center p-3">
                                    <i class="ri-team-line fs-24 text-success mb-2"></i>
                                    <div class="fs-13">Pracownicy</div>
                                </a>
                            </div>
                            {% endif %}
                            {% if is_granted_module('admin') %}
                            <div class="col-6">
                                <a href="{{ path('admin_dashboard') }}" class="dropdown-item text-center p-3">
                                    <i class="ri-admin-line fs-24 text-info mb-2"></i>
                                    <div class="fs-13">Admin</div>
                                </a>
                            </div>
                            <div class="col-6">
                                <a href="{{ path('admin_settings') }}" class="dropdown-item text-center p-3">
                                    <i class="ri-settings-3-line fs-24 text-warning mb-2"></i>
                                    <div class="fs-13">Ustawienia</div>
                                </a>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>




                <div class="ms-1 header-item d-none d-sm-flex">
                    <button type="button" class="btn btn-icon btn-topbar btn-ghost-secondary rounded-circle" data-toggle="fullscreen">
                        <i class='bx bx-fullscreen fs-22'></i>
                    </button>
                </div>

                <div class="ms-1 header-item d-none d-sm-flex">
                    <button type="button" class="btn btn-icon btn-topbar btn-ghost-secondary rounded-circle light-dark-mode">
                        <i class='bx bx-moon fs-22'></i>
                    </button>
                </div>

                {% include 'partials/notifications.html.twig' %}

                <div class="dropdown ms-sm-3 header-item topbar-user">
                    <button type="button" class="btn" id="page-header-user-dropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="d-flex align-items-center">
                            <img class="rounded-circle header-profile-user" src="{{ app.user.avatar ? asset('uploads/avatars/' ~ app.user.avatar) : asset('assets/images/users/avatar-1.jpg') }}" alt="Header Avatar">
                            <span class="text-start ms-xl-2">
                                <span class="d-none d-xl-inline-block ms-1 fw-medium user-name-text">{{ app.user.fullName }}</span>
                                <span class="d-none d-xl-block ms-1 fs-12 user-name-sub-text">{{ app.user.position }}</span>
                            </span>
                        </span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-end">
                        <!-- item-->
                        <h6 class="dropdown-header">Witaj {{ app.user.firstName }}!</h6>
                        <a class="dropdown-item" href="{{ path('dashboard') }}"><i class="ri-dashboard-line text-muted fs-16 align-middle me-1"></i> <span class="align-middle">Dashboard</span></a>
                        <a class="dropdown-item" href="{{ path('profile') }}"><i class="ri-user-line text-muted fs-16 align-middle me-1"></i> <span class="align-middle">Profil</span></a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="{{ path('logout') }}"><i class="ri-logout-circle-line text-muted fs-16 align-middle me-1"></i> <span class="align-middle">Wyloguj</span></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

