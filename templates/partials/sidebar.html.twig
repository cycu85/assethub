<!-- ========== App Menu ========== -->
<div class="app-menu navbar-menu">
    <!-- LOGO -->
    <div class="navbar-brand-box">
        <!-- Dark Logo-->
        <a href="/" class="logo logo-dark">
            <span class="logo-sm">
                <img src="{{ asset('assets/images/logo-sm.png') }}" alt="" height="22">
            </span>
            <span class="logo-lg">
                <img src="{{ asset(company_logo()) }}" alt="{{ app_name() }}" height="17">
            </span>
        </a>
        <!-- Light Logo-->
        <a href="/" class="logo logo-light">
            <span class="logo-sm">
                <img src="{{ asset('assets/images/logo-sm.png') }}" alt="" height="22">
            </span>
            <span class="logo-lg">
                <img src="{{ asset(company_logo()) }}" alt="{{ app_name() }}" height="17">
            </span>
        </a>
        <button type="button" class="btn btn-sm p-0 fs-20 header-item float-end btn-vertical-sm-hover" id="vertical-hover">
            <i class="ri-record-circle-line"></i>
        </button>
    </div>

    <div id="scrollbar">
        <div class="container-fluid">
            <div id="two-column-menu">
            </div>
            <ul class="navbar-nav" id="navbar-nav">
                <li class="menu-title"><span data-key="t-menu">Menu</span></li>
                
                <!-- Dashboard -->
                <li class="nav-item">
                    <a class="nav-link menu-link {{ app.request.get('_route') == 'dashboard' ? 'active' : '' }}" href="/">
                        <i class="ri-dashboard-2-line"></i> <span data-key="t-dashboard">Dashboard</span>
                    </a>
                </li>

                <!-- AssetHub Modules -->
                {% set userModules = get_user_modules() %}
                {% if userModules|length > 0 %}
                    <li class="menu-title"><span data-key="t-modules">Moduły</span></li>
                    
                    {% set hasSystemAdmin = false %}
                    {% set hasEmployeesRole = false %}
                    
                    {% for userRole in userModules %}
                        {% set module = userRole.role.module %}
                        
                        {% if module.name == 'admin' and userRole.role.name == 'system_admin' %}
                            {% set hasSystemAdmin = true %}
                        {% elseif module.name == 'admin' and userRole.role.name in ['employees_viewer', 'employees_editor', 'employees_manager'] %}
                            {% set hasEmployeesRole = true %}
                        {% endif %}
                        
                        {% if module.name == 'equipment' %}
                        <li class="nav-item">
                            <a class="nav-link menu-link {{ app.request.get('_route') starts with 'equipment_' ? 'active' : '' }}" href="{{ path('equipment_index') }}">
                                <i class="ri-tools-line"></i> <span>{{ module.displayName }}</span>
                            </a>
                        </li>
                        {% elseif module.name == 'asekuracja' %}
                        {# Sprawdź czy użytkownik jest w sekcji asekuracja #}
                        {% set current_route = app.request.get('_route') %}
                        {% set is_asekuracja_section = current_route starts with 'asekuracja_' %}
                        
                        <li class="nav-item">
                            <a class="nav-link menu-link {{ is_asekuracja_section ? 'active' : '' }}" 
                               href="#sidebarAsekuracja" 
                               data-bs-toggle="collapse" 
                               role="button" 
                               aria-expanded="{{ is_asekuracja_section ? 'true' : 'false' }}" 
                               aria-controls="sidebarAsekuracja">
                                <i class="ri-shield-check-line"></i> <span>{{ module.displayName }}</span>
                            </a>
                            <div class="collapse menu-dropdown {{ is_asekuracja_section ? 'show' : '' }}" id="sidebarAsekuracja">
                                <ul class="nav nav-sm flex-column">
                                    {% set user_has_basic_access = is_granted('ROLE_USER') and (
                                        authorization_service.hasPermission(app.user, 'asekuracja', 'VIEW') or
                                        authorization_service.hasPermission(app.user, 'asekuracja', 'CREATE') or
                                        authorization_service.hasPermission(app.user, 'asekuracja', 'EDIT') or
                                        authorization_service.hasPermission(app.user, 'asekuracja', 'DELETE') or
                                        authorization_service.hasPermission(app.user, 'asekuracja', 'ASSIGN') or
                                        authorization_service.hasPermission(app.user, 'asekuracja', 'REVIEW') or
                                        authorization_service.hasPermission(app.user, 'asekuracja', 'TRANSFER')
                                    ) %}
                                    
                                    {% if user_has_basic_access %}
                                    <li class="nav-item">
                                        <a href="{{ path('asekuracja_index') }}" class="nav-link {{ current_route in ['asekuracja_index', 'asekuracja_equipment_new', 'asekuracja_equipment_show', 'asekuracja_equipment_edit', 'asekuracja_equipment_assign', 'asekuracja_search'] ? 'active' : '' }}">
                                            <i class="ri-shield-line me-2"></i>Sprzęt
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="{{ path('asekuracja_equipment_set_index') }}" class="nav-link {{ current_route starts with 'asekuracja_equipment_set' or current_route == 'asekuracja_available_equipment_modal' ? 'active' : '' }}">
                                            <i class="ri-stack-line me-2"></i>Zestawy
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="{{ path('asekuracja_review_index') }}" class="nav-link {{ current_route starts with 'asekuracja_review' ? 'active' : '' }}">
                                            <i class="ri-search-eye-line me-2"></i>Przeglądy
                                        </a>
                                    </li>
                                    {% endif %}
                                    
                                    <li class="nav-item">
                                        <a href="{{ path('asekuracja_my_equipment') }}" class="nav-link {{ current_route == 'asekuracja_my_equipment' ? 'active' : '' }}">
                                            <i class="ri-user-line me-2"></i>Moje przypisania
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        {% elseif module.name != 'admin' %}
                        {# Generic module handler - dla przyszłych modułów (pomijamy admin bo obsługujemy go osobno) #}
                        <li class="nav-item">
                            <a class="nav-link menu-link {{ app.request.get('_route') starts with module.name ~ '_' ? 'active' : '' }}" href="{{ path(module.name ~ '_index') }}">
                                <i class="ri-apps-line"></i> <span>{{ module.displayName }}</span>
                            </a>
                        </li>
                        {% endif %}
                    {% endfor %}
                    
                    {# Panel administracyjny dla system_admin #}
                    {% if hasSystemAdmin %}
                    {# Sprawdź czy użytkownik jest na którejś ze stron admin (bez admin_users) #}
                    {% set current_route = app.request.get('_route') %}
                    {% set is_admin_section = current_route starts with 'admin_' and not (current_route starts with 'admin_users') %}
                    
                    <li class="nav-item">
                        <a class="nav-link menu-link {{ is_admin_section ? 'active' : '' }}" 
                           href="#sidebarAdmin" 
                           data-bs-toggle="collapse" 
                           role="button" 
                           aria-expanded="{{ is_admin_section ? 'true' : 'false' }}" 
                           aria-controls="sidebarAdmin">
                            <i class="ri-settings-3-line"></i> <span>Panel administracyjny</span>
                        </a>
                        <div class="collapse menu-dropdown {{ is_admin_section ? 'show' : '' }}" id="sidebarAdmin">
                            <ul class="nav nav-sm flex-column">
                                <li class="nav-item">
                                    <a href="{{ path('admin_dashboard') }}" class="nav-link {{ current_route == 'admin_dashboard' ? 'active' : '' }}">Panel główny</a>
                                </li>
                                <li class="nav-item">
                                    <a href="{{ path('admin_roles_index') }}" class="nav-link {{ current_route starts with 'admin_roles' ? 'active' : '' }}">Role i uprawnienia</a>
                                </li>
                                <li class="nav-item">
                                    <a href="{{ path('admin_modules') }}" class="nav-link {{ current_route == 'admin_modules' ? 'active' : '' }}">Moduły</a>
                                </li>
                                <li class="nav-item">
                                    <a href="{{ path('admin_dictionaries') }}" class="nav-link {{ current_route starts with 'admin_dictionaries' ? 'active' : '' }}">Słowniki</a>
                                </li>
                                <li class="nav-item">
                                    <a href="{{ path('admin_settings') }}" class="nav-link {{ current_route starts with 'admin_settings' ? 'active' : '' }}">Ustawienia</a>
                                </li>
                                <li class="nav-item">
                                    <a href="{{ path('admin_logs') }}" class="nav-link {{ current_route starts with 'admin_logs' ? 'active' : '' }}">Logi</a>
                                </li>
                                <li class="nav-item">
                                    <a href="{{ path('admin_emails_index') }}" class="nav-link {{ current_route starts with 'admin_emails' ? 'active' : '' }}">Historia maili</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    {% endif %}
                    
                    {# Menu Pracownicy dla system_admin lub ról employees #}
                    {% if hasSystemAdmin or hasEmployeesRole %}
                    <li class="nav-item">
                        <a class="nav-link menu-link {{ app.request.get('_route') starts with 'admin_users' ? 'active' : '' }}" href="{{ path('admin_users_index') }}">
                            <i class="ri-team-line"></i> <span>Pracownicy</span>
                        </a>
                    </li>
                    {% endif %}
                {% endif %}

                <!-- Additional modules would go here -->
                
                {# 
                WZORZEC DLA NOWYCH POZYCJI MENU Z PODMENU:
                
                Aby nowe pozycje menu z podmenu zachowywały stan rozwinięcia, użyj tego wzorca:
                
                {% set current_route = app.request.get('_route') %}
                {% set is_module_section = current_route starts with 'module_prefix_' %}
                
                <li class="nav-item">
                    <a class="nav-link menu-link {{ is_module_section ? 'active' : '' }}" 
                       href="#sidebarModuleName" 
                       data-bs-toggle="collapse" 
                       role="button" 
                       aria-expanded="{{ is_module_section ? 'true' : 'false' }}" 
                       aria-controls="sidebarModuleName">
                        <i class="ri-icon-name"></i> <span>Nazwa Modułu</span>
                    </a>
                    <div class="collapse menu-dropdown {{ is_module_section ? 'show' : '' }}" id="sidebarModuleName">
                        <ul class="nav nav-sm flex-column">
                            <li class="nav-item">
                                <a href="{{ path('module_route1') }}" class="nav-link {{ current_route starts with 'module_route1' ? 'active' : '' }}">Pozycja 1</a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('module_route2') }}" class="nav-link {{ current_route starts with 'module_route2' ? 'active' : '' }}">Pozycja 2</a>
                            </li>
                        </ul>
                    </div>
                </li>
                
                WAŻNE:
                - Zastąp 'module_prefix_' prefiksem swoich route'ów
                - Użyj unikalnego ID dla sidebarModuleName
                - Dodaj odpowiednie klasy 'active' dla podmenu
                - Użyj 'starts with' dla route'ów z wieloma akcjami (edit, create, show)
                - Użyj '==' dla pojedynczych route'ów
                #}

            </ul>
        </div>
        <!-- Sidebar -->
    </div>

    <div class="sidebar-background"></div>
</div>
<!-- Left Sidebar End -->
<!-- Vertical Overlay-->
<div class="vertical-overlay"></div>