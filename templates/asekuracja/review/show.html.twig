{% extends 'base.html.twig' %}

{% block title %}Przegląd {{ review.reviewNumber }} - {{ app_name() }}{% endblock %}
{% block page_title %}Przegląd {{ review.reviewNumber }}{% endblock %}

{% block content %}
<!-- Breadcrumbs -->
<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="{{ path('asekuracja_index') }}">Asekuracja</a></li>
                <li class="breadcrumb-item"><a href="{{ path('asekuracja_review_index') }}">Przeglądy</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ review.reviewNumber }}</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <!-- Nagłówek -->
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title mb-0">
                            <i class="ri-search-eye-line me-2"></i>
                            Przegląd {{ review.reviewNumber }}
                        </h5>
                    </div>
                    <div>
                        {% set status_class = review.status == 'preparation' ? 'secondary' : 
                                             (review.status == 'sent' ? 'warning' : 
                                             (review.status == 'completed' ? 'success' : 'danger')) %}
                        <span class="badge bg-{{ status_class }} fs-6">
                            {% if review.status == 'preparation' %}Przygotowanie
                            {% elseif review.status == 'sent' %}Wysłane
                            {% elseif review.status == 'completed' %}Zakończone
                            {% elseif review.status == 'cancelled' %}Anulowane
                            {% else %}{{ review.status }}{% endif %}
                        </span>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Podstawowe informacje</h6>
                        <table class="table table-sm table-borderless">
                            <tr>
                                <td class="text-muted">Numer przeglądu:</td>
                                <td><strong>{{ review.reviewNumber }}</strong></td>
                            </tr>
                            <tr>
                                <td class="text-muted">Typ przeglądu:</td>
                                <td>
                                    {% set type_class = review.reviewType == 'periodic' ? 'primary' : 'secondary' %}
                                    <span class="badge bg-{{ type_class }}">
                                        {% if review.reviewType == 'periodic' %}Okresowy
                                        {% elseif review.reviewType == 'damage_control' %}Po uszkodzeniu
                                        {% elseif review.reviewType == 'post_repair' %}Po naprawie
                                        {% elseif review.reviewType == 'initial' %}Początkowy
                                        {% else %}{{ review.reviewType }}{% endif %}
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-muted">Data planowana:</td>
                                <td><strong>{{ review.plannedDate|date('d.m.Y') }}</strong></td>
                            </tr>
                            <tr>
                                <td class="text-muted">Data utworzenia:</td>
                                <td>{{ review.createdAt|date('d.m.Y H:i') }}</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h6>Odpowiedzialni</h6>
                        <table class="table table-sm table-borderless">
                            <tr>
                                <td class="text-muted">Przygotował:</td>
                                <td>{{ review.preparedBy ? review.preparedBy.fullName : review.createdBy.fullName }}</td>
                            </tr>
                            {% if review.sentBy %}
                            <tr>
                                <td class="text-muted">Wysłał:</td>
                                <td>{{ review.sentBy.fullName }}</td>
                            </tr>
                            {% endif %}
                            {% if review.completedBy %}
                            <tr>
                                <td class="text-muted">Zakończył:</td>
                                <td>{{ review.completedBy.fullName }}</td>
                            </tr>
                            {% endif %}
                            {% if review.reviewCompany %}
                            <tr>
                                <td class="text-muted">Firma kontrolująca:</td>
                                <td><strong>{{ review.reviewCompany }}</strong></td>
                            </tr>
                            {% endif %}
                        </table>
                    </div>
                </div>

                {% if review.notes %}
                <div class="mt-3">
                    <h6>Uwagi</h6>
                    <div class="bg-light p-3 rounded">
                        {{ review.notes|nl2br }}
                    </div>
                </div>
                {% endif %}
            </div>
        </div>

        <!-- Przedmiot przeglądu -->
        <div class="card mt-4">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="ri-tools-line me-2"></i>Przedmiot przeglądu
                </h6>
            </div>
            <div class="card-body">
                {% if review.equipment %}
                <div class="d-flex align-items-center">
                    <div class="avatar-sm bg-primary rounded me-3">
                        <i class="ri-shield-line text-white fs-16"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="mb-1">
                            <a href="{{ path('asekuracja_equipment_show', {id: review.equipment.id}) }}" 
                               class="text-decoration-none">
                                {{ review.equipment.name }}
                            </a>
                        </h6>
                        <div class="text-muted small">
                            <span class="me-3">{{ review.equipment.inventoryNumber }}</span>
                            <span class="me-3">{{ review.equipment.equipmentType }}</span>
                            {% if review.equipment.manufacturer and review.equipment.model %}
                                <span>{{ review.equipment.manufacturer }} {{ review.equipment.model }}</span>
                            {% endif %}
                        </div>
                    </div>
                    <div>
                        {% set status_class = review.equipment.status == 'available' ? 'success' : 'warning' %}
                        <span class="badge bg-{{ status_class }}">{{ review.equipment.statusDisplayName }}</span>
                    </div>
                </div>
                {% elseif review.equipmentSet %}
                <div class="d-flex align-items-center">
                    <div class="avatar-sm bg-info rounded me-3">
                        <i class="ri-stack-line text-white fs-16"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="mb-1">
                            <a href="{{ path('asekuracja_equipment_set_show', {id: review.equipmentSet.id}) }}" 
                               class="text-decoration-none">
                                {{ review.equipmentSet.name }}
                            </a>
                        </h6>
                        <div class="text-muted small">
                            <span class="me-3">Zestaw {{ review.equipmentSet.setType }}</span>
                            <span>{{ review.equipmentSet.equipmentItems|length }} elementów</span>
                        </div>
                    </div>
                    <div>
                        {% set status_class = review.equipmentSet.status == 'available' ? 'success' : 'warning' %}
                        <span class="badge bg-{{ status_class }}">{{ review.equipmentSet.statusDisplayName }}</span>
                    </div>
                </div>
                {% else %}
                <div class="text-center text-muted py-3">
                    <i class="ri-alert-line fs-24"></i>
                    <p class="mb-0">Nie określono przedmiotu przeglądu</p>
                </div>
                {% endif %}
            </div>
        </div>

        <!-- Wyniki przeglądu -->
        {% if review.status == 'completed' %}
        <div class="card mt-4">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="ri-check-double-line me-2"></i>Wyniki przeglądu
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-sm table-borderless">
                            {% if review.sentDate %}
                            <tr>
                                <td class="text-muted">Data wysłania:</td>
                                <td>{{ review.sentDate|date('d.m.Y') }}</td>
                            </tr>
                            {% endif %}
                            {% if review.completedDate %}
                            <tr>
                                <td class="text-muted">Data zakończenia:</td>
                                <td>{{ review.completedDate|date('d.m.Y') }}</td>
                            </tr>
                            {% endif %}
                            {% if review.certificateNumber %}
                            <tr>
                                <td class="text-muted">Nr certyfikatu:</td>
                                <td><strong>{{ review.certificateNumber }}</strong></td>
                            </tr>
                            {% endif %}
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-sm table-borderless">
                            {% if review.result %}
                            <tr>
                                <td class="text-muted">Wynik:</td>
                                <td>
                                    {% set result_class = review.result == 'passed' ? 'success' : 
                                                         (review.result == 'failed' ? 'danger' : 'warning') %}
                                    <span class="badge bg-{{ result_class }}">
                                        {% if review.result == 'passed' %}Pozytywny
                                        {% elseif review.result == 'failed' %}Negatywny
                                        {% elseif review.result == 'conditionally_passed' %}Warunkowo pozytywny
                                        {% else %}{{ review.result }}{% endif %}
                                    </span>
                                </td>
                            </tr>
                            {% endif %}
                            {% if review.cost %}
                            <tr>
                                <td class="text-muted">Koszt:</td>
                                <td><strong>{{ review.cost }} PLN</strong></td>
                            </tr>
                            {% endif %}
                            {% if review.nextReviewDate %}
                            <tr>
                                <td class="text-muted">Następny przegląd:</td>
                                <td><strong>{{ review.nextReviewDate|date('d.m.Y') }}</strong></td>
                            </tr>
                            {% endif %}
                        </table>
                    </div>
                </div>

                {% if review.findings %}
                <div class="mt-3">
                    <h6>Stwierdzone usterki/uwagi</h6>
                    <div class="bg-light p-3 rounded">
                        {{ review.findings|nl2br }}
                    </div>
                </div>
                {% endif %}

                {% if review.recommendations %}
                <div class="mt-3">
                    <h6>Zalecenia</h6>
                    <div class="bg-light p-3 rounded">
                        {{ review.recommendations|nl2br }}
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
        {% endif %}
        
        <!-- Debug: Informacja o załącznikach -->
        {% if review.status == 'completed' %}
        <div class="card mt-4 border-info">
            <div class="card-header bg-info-subtle">
                <h6 class="card-title mb-0 text-info">
                    <i class="ri-bug-line me-2"></i>Debug: Załączniki
                </h6>
            </div>
            <div class="card-body">
                <div class="small">
                    <strong>review.attachments is empty:</strong> {{ review.attachments is empty ? 'YES' : 'NO' }}<br>
                    <strong>review.attachments type:</strong> {{ review.attachments is iterable ? 'iterable' : 'not iterable' }}<br>
                    <strong>review.attachments length:</strong> {{ review.attachments|length ?? 'null' }}<br>
                    <strong>Raw data:</strong> <pre>{{ review.attachments|json_encode }}</pre>
                </div>
            </div>
        </div>
        {% endif %}
        
        <!-- Załączniki -->
        {% if review.attachments is not empty %}
        <div class="card mt-4">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="ri-attachment-line me-2"></i>Załączniki z przeglądu ({{ review.attachments|length }})
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    {% for attachment in review.attachments %}
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center p-3 border rounded">
                            <div class="avatar-sm bg-light rounded me-3">
                                {% if attachment.filename|split('.')|last in ['pdf'] %}
                                    <i class="ri-file-pdf-line text-danger fs-16"></i>
                                {% elseif attachment.filename|split('.')|last in ['doc', 'docx'] %}
                                    <i class="ri-file-word-line text-primary fs-16"></i>
                                {% elseif attachment.filename|split('.')|last in ['jpg', 'jpeg', 'png'] %}
                                    <i class="ri-image-line text-success fs-16"></i>
                                {% elseif attachment.filename|split('.')|last in ['xls', 'xlsx'] %}
                                    <i class="ri-file-excel-line text-success fs-16"></i>
                                {% else %}
                                    <i class="ri-file-line text-muted fs-16"></i>
                                {% endif %}
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1 fs-14">{{ attachment.original_name }}</h6>
                                <div class="text-muted small">
                                    <span>{{ (attachment.size / 1024)|number_format(0) }} KB</span>
                                    <span class="mx-1">•</span>
                                    <span>{{ attachment.uploaded_at|date('d.m.Y H:i') }}</span>
                                </div>
                            </div>
                            <div>
                                <a href="{{ path('asekuracja_review_attachment_download', {id: review.id, filename: attachment.filename}) }}" 
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="ri-download-line"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        {% endif %}
    </div>

    <!-- Sidebar z akcjami -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">Akcje</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    {% if can_edit %}
                    <a href="{{ path('asekuracja_review_edit', {id: review.id}) }}" 
                       class="btn btn-primary">
                        <i class="ri-edit-line me-1"></i>Edytuj przegląd
                    </a>
                    {% endif %}

                    {% if review.status == 'preparation' and can_edit %}
                    <form method="POST" action="{{ path('asekuracja_review_send', {id: review.id}) }}" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('send_review_' ~ review.id) }}">
                        <button type="submit" class="btn btn-warning w-100" 
                                onclick="return confirm('Czy na pewno wysłać przegląd?')">
                            <i class="ri-send-plane-line me-1"></i>Wyślij na przegląd
                        </button>
                    </form>
                    {% endif %}

                    {% if review.status == 'sent' and can_edit %}
                    <button type="button" class="btn btn-success w-100" 
                            data-bs-toggle="modal" data-bs-target="#completeReviewModal">
                        <i class="ri-check-double-line me-1"></i>Zakończ przegląd
                    </button>
                    {% endif %}

                    {% if can_delete and review.status == 'preparation' %}
                    <form method="POST" action="{{ path('asekuracja_review_delete', {id: review.id}) }}" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_review_' ~ review.id) }}">
                        <button type="submit" class="btn btn-outline-danger w-100" 
                                onclick="return confirm('Czy na pewno usunąć ten przegląd?')">
                            <i class="ri-delete-bin-line me-1"></i>Usuń przegląd
                        </button>
                    </form>
                    {% endif %}

                    <hr>

                    <a href="{{ path('asekuracja_review_index') }}" class="btn btn-outline-secondary">
                        <i class="ri-arrow-left-line me-1"></i>Powrót do listy
                    </a>

                    {% if review.equipment %}
                        <a href="{{ path('asekuracja_equipment_show', {id: review.equipment.id}) }}" 
                           class="btn btn-outline-info">
                            <i class="ri-shield-line me-1"></i>Zobacz sprzęt
                        </a>
                    {% elseif review.equipmentSet %}
                        <a href="{{ path('asekuracja_equipment_set_show', {id: review.equipmentSet.id}) }}" 
                           class="btn btn-outline-info">
                            <i class="ri-stack-line me-1"></i>Zobacz zestaw
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Historia przeglądu -->
        <div class="card mt-4">
            <div class="card-header">
                <h6 class="card-title mb-0">Historia przeglądu</h6>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="timeline-item">
                        <div class="timeline-marker bg-secondary"></div>
                        <div class="timeline-content">
                            <h6 class="mb-1">Utworzenie przeglądu</h6>
                            <p class="text-muted mb-0">
                                {{ review.createdAt|date('d.m.Y H:i') }}<br>
                                przez {{ review.createdBy.fullName }}
                            </p>
                        </div>
                    </div>

                    {% if review.sentDate %}
                    <div class="timeline-item">
                        <div class="timeline-marker bg-warning"></div>
                        <div class="timeline-content">
                            <h6 class="mb-1">Wysłanie na przegląd</h6>
                            <p class="text-muted mb-0">
                                {{ review.sentDate|date('d.m.Y H:i') }}<br>
                                przez {{ review.sentBy.fullName }}
                            </p>
                        </div>
                    </div>
                    {% endif %}

                    {% if review.completedDate %}
                    <div class="timeline-item">
                        <div class="timeline-marker bg-success"></div>
                        <div class="timeline-content">
                            <h6 class="mb-1">Zakończenie przeglądu</h6>
                            <p class="text-muted mb-0">
                                {{ review.completedDate|date('d.m.Y H:i') }}<br>
                                przez {{ review.completedBy.fullName }}
                            </p>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.timeline {
    position: relative;
    padding-left: 30px;
}

.timeline::before {
    content: '';
    position: absolute;
    left: 12px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: #dee2e6;
}

.timeline-item {
    position: relative;
    margin-bottom: 20px;
}

.timeline-marker {
    position: absolute;
    left: -24px;
    top: 5px;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 2px solid white;
}

.timeline-content {
    background: #f8f9fa;
    padding: 12px;
    border-radius: 6px;
    border-left: 3px solid #dee2e6;
}

.timeline-content h6 {
    font-size: 14px;
    font-weight: 600;
}
</style>

<!-- Modal zakończenia przeglądu -->
{% if review.status == 'sent' and can_edit %}
<div class="modal fade" id="completeReviewModal" tabindex="-1" aria-labelledby="completeReviewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="completeReviewModalLabel">
                    <i class="ri-check-double-line me-2"></i>Zakończenie przeglądu {{ review.reviewNumber }}
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="POST" action="{{ path('asekuracja_review_complete', {id: review.id}) }}" enctype="multipart/form-data">
                <input type="hidden" name="_token" value="{{ csrf_token('complete_review_' ~ review.id) }}">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="completedDate" class="form-label">Data zakończenia przeglądu <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="completedDate" name="completed_date" 
                                       value="{{ 'now'|date('Y-m-d') }}" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="result" class="form-label">Wynik przeglądu <span class="text-danger">*</span></label>
                                <select class="form-select" id="result" name="result" required>
                                    <option value="">Wybierz wynik</option>
                                    <option value="passed">Pozytywny</option>
                                    <option value="failed">Negatywny</option>
                                    <option value="conditionally_passed">Warunkowo pozytywny</option>
                                    <option value="not_applicable">Nie dotyczy</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="certificateNumber" class="form-label">Numer certyfikatu/protokołu</label>
                                <input type="text" class="form-control" id="certificateNumber" name="certificate_number" 
                                       placeholder="Numer dokumentu potwierdzającego przegląd">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="cost" class="form-label">Koszt przeglądu (PLN)</label>
                                <input type="number" class="form-control" id="cost" name="cost" step="0.01" min="0"
                                       placeholder="0.00">
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="nextReviewDate" class="form-label">Data następnego przeglądu</label>
                        <input type="date" class="form-control" id="nextReviewDate" name="next_review_date"
                               min="{{ 'now'|date('Y-m-d') }}">
                        <div class="form-text">Zalecana data kolejnego przeglądu</div>
                    </div>

                    <div class="mb-3">
                        <label for="findings" class="form-label">Stwierdzone usterki/uwagi</label>
                        <textarea class="form-control" id="findings" name="findings" rows="3"
                                  placeholder="Opis stwierdzonych usterek, wad, obserwacji..."></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="recommendations" class="form-label">Zalecenia</label>
                        <textarea class="form-control" id="recommendations" name="recommendations" rows="3"
                                  placeholder="Zalecenia dotyczące dalszego użytkowania, napraw, wymiany..."></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="attachments" class="form-label">Załączniki z przeglądu</label>
                        <input type="file" class="form-control" id="attachments" name="attachments[]" multiple
                               accept=".pdf,.doc,.docx,.jpg,.jpeg,.png,.xlsx,.xls">
                        <div class="form-text">
                            Dozwolone formaty: PDF, DOC, DOCX, JPG, PNG, XLSX, XLS. Maksymalny rozmiar: 10MB na plik.
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <h6 class="alert-heading">
                            <i class="ri-information-line me-2"></i>Informacja
                        </h6>
                        <p class="mb-0">Po zakończeniu przeglądu status sprzętu/zestawu zostanie automatycznie zmieniony na "Dostępny". W historii przeglądu zostanie zapisany odnośnik do tego przeglądu.</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Anuluj</button>
                    <button type="submit" class="btn btn-success">
                        <i class="ri-check-double-line me-1"></i>Zakończ przegląd
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}