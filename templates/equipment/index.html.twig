{% extends 'base.html.twig' %}

{% block title %}Sprzęt wysokościowy - AssetHub{% endblock %}
{% block page_title %}Sprzęt wysokościowy{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col-md-8">
        <h4 class="mb-0">
            <i class="ri-tools-line me-2"></i>
            Zarządzanie sprzętem wysokościowym
        </h4>
        <p class="text-muted mb-0">Przegląd i zarządzanie sprzętem bezpieczeństwa do pracy na wysokości</p>
    </div>
    <div class="col-md-4 text-end">
        {% if can_create %}
        <button class="btn btn-primary">
            <i class="ri-add-line me-1"></i>
            Dodaj sprzęt
        </button>
        {% endif %}
    </div>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-label">Szukaj</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="ri-search-line"></i>
                                </span>
                                <input type="text" class="form-control" placeholder="Nazwa, model, numer seryjny...">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-label">Kategoria</label>
                            <select class="form-select">
                                <option value="">Wszystkie kategorie</option>
                                <option value="harness">Uprzęże</option>
                                <option value="helmet">Kaski</option>
                                <option value="rope">Liny</option>
                                <option value="carabiner">Karabińczyki</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-label">Status</label>
                            <select class="form-select">
                                <option value="">Wszystkie statusy</option>
                                <option value="available">Dostępny</option>
                                <option value="assigned">Przypisany</option>
                                <option value="maintenance">Serwis</option>
                                <option value="withdrawn">Wycofany</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-label">&nbsp;</label>
                            <div class="d-grid">
                                <button type="button" class="btn btn-outline-primary">
                                    <i class="ri-filter-line me-1"></i>
                                    Filtruj
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0">Lista sprzętu</h6>
                <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-outline-secondary">
                        <i class="ri-download-line me-1"></i>
                        Eksport
                    </button>
                    <div class="btn-group" role="group">
                        <input type="radio" class="btn-check" name="view" id="table-view" checked>
                        <label class="btn btn-outline-secondary btn-sm" for="table-view">
                            <i class="ri-list-unordered"></i>
                        </label>
                        <input type="radio" class="btn-check" name="view" id="card-view">
                        <label class="btn btn-outline-secondary btn-sm" for="card-view">
                            <i class="ri-grid-line"></i>
                        </label>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Nazwa</th>
                                <th>Kategoria</th>
                                <th>Numer seryjny</th>
                                <th>Status</th>
                                <th>Następny przegląd</th>
                                <th>Przypisany do</th>
                                <th>Akcje</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Przykładowe dane -->
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0 me-3">
                                            <div class="avatar-sm bg-primary-subtle rounded d-flex align-items-center justify-content-center">
                                                <i class="ri-shield-line text-primary"></i>
                                            </div>
                                        </div>
                                        <div>
                                            <h6 class="mb-0">Uprząż Petzl Avao Bod</h6>
                                            <small class="text-muted">Petzl</small>
                                        </div>
                                    </div>
                                </td>
                                <td><span class="badge bg-info">Uprzęże</span></td>
                                <td><code>PZ-2023-001</code></td>
                                <td><span class="badge bg-success">Dostępny</span></td>
                                <td>
                                    <small class="text-warning">
                                        <i class="ri-calendar-line me-1"></i>
                                        15.08.2024
                                    </small>
                                </td>
                                <td>-</td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                            Akcje
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="#"><i class="ri-eye-line me-2"></i>Podgląd</a></li>
                                            {% if can_edit %}
                                            <li><a class="dropdown-item" href="#"><i class="ri-edit-line me-2"></i>Edytuj</a></li>
                                            {% endif %}
                                            <li><a class="dropdown-item" href="#"><i class="ri-user-add-line me-2"></i>Przypisz</a></li>
                                            <li><a class="dropdown-item" href="#"><i class="ri-file-pdf-line me-2"></i>Protokół</a></li>
                                            {% if can_delete %}
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item text-danger" href="#"><i class="ri-delete-bin-line me-2"></i>Usuń</a></li>
                                            {% endif %}
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0 me-3">
                                            <div class="avatar-sm bg-primary-subtle rounded d-flex align-items-center justify-content-center">
                                                <i class="ri-hard-hat-line text-primary"></i>
                                            </div>
                                        </div>
                                        <div>
                                            <h6 class="mb-0">Kask Vertex Vent</h6>
                                            <small class="text-muted">Petzl</small>
                                        </div>
                                    </div>
                                </td>
                                <td><span class="badge bg-warning">Kaski</span></td>
                                <td><code>PZ-2023-045</code></td>
                                <td><span class="badge bg-primary">Przypisany</span></td>
                                <td>
                                    <small class="text-success">
                                        <i class="ri-calendar-line me-1"></i>
                                        12.12.2024
                                    </small>
                                </td>
                                <td>Jan Kowalski</td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                            Akcje
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="#"><i class="ri-eye-line me-2"></i>Podgląd</a></li>
                                            {% if can_edit %}
                                            <li><a class="dropdown-item" href="#"><i class="ri-edit-line me-2"></i>Edytuj</a></li>
                                            {% endif %}
                                            <li><a class="dropdown-item" href="#"><i class="ri-user-unfollow-line me-2"></i>Odbierz</a></li>
                                            <li><a class="dropdown-item" href="#"><i class="ri-file-pdf-line me-2"></i>Protokół</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">Pokazano 2 z 2 wyników</small>
                    <nav>
                        <ul class="pagination pagination-sm mb-0">
                            <li class="page-item disabled">
                                <span class="page-link">Poprzednia</span>
                            </li>
                            <li class="page-item active">
                                <span class="page-link">1</span>
                            </li>
                            <li class="page-item disabled">
                                <span class="page-link">Następna</span>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}